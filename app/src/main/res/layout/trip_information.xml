<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trip_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/textvisit"
    tools:context="com.example.anne.testvisit.TripInformation">

    <TextView
        android:text="Estimated Number of Obstacles:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview1"
        android:layout_marginTop="25dp"
        android:id="@+id/testview2"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <TextView
        android:text="Estimated Time of Trip:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textview1"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:id="@+id/estiobstacle"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/testview2"
        android:layout_alignBottom="@+id/testview2"
        android:textColor="@color/colorPrimaryDark"
        android:layout_toEndOf="@+id/testview2"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friendly"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/testview3"
        android:layout_alignBottom="@+id/testview3"
        android:textColor="@color/colorPrimaryDark"
        android:layout_toEndOf="@+id/testview3"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/estitime"
        android:textSize="18sp"
        android:layout_above="@+id/testview2"
        android:layout_toEndOf="@+id/textview1"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="13dp" />

    <Button
        android:text="Start My Trip"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/starttrip"
        android:textSize="36sp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp" />

    <TextView
        android:text="Blind Friendly?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/testview3"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/testview2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Travel Independently?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testview4"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/friendly"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/company"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignBaseline="@+id/testview4"
        android:layout_alignBottom="@+id/testview4"
        android:layout_toEndOf="@+id/textview1" />

</RelativeLayout>
