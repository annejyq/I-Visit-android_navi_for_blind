<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/planyourtrip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    android:background="@drawable/textvisit"
    tools:context="com.example.anne.testvisit.PlanYourTrip">

    <Button
        android:text="Start From"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/start"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teststart"
        android:text=""
        android:layout_below="@+id/start"
        android:layout_alignStart="@+id/start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testend"
        android:text=""
        android:layout_below="@+id/start"
        android:layout_alignEnd="@+id/start" />

    <Button
        android:text="Destination"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/end"
        android:textSize="36sp"
        android:layout_below="@+id/teststart"
        android:layout_alignStart="@+id/teststart" />

    <Button
        android:text="NEXT"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:textSize="36sp"
        android:id="@+id/gotosuggestion"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/end" />
</RelativeLayout>
